; vim:ft=dosini

[config]
# DPI value for HiDPI screen
dpi = 96

# bar position, apply globally
width = 100%
height = 3%
offset-x = 0%
offset-y = 0%
radius = 0.0

fixed-center = true
override-redirect = false

# Top modules
top-left = bspwm
top-center = date
top-right =

# Bottom modules
bottom-left = filesystem temperature memory cpu network-detail
bottom-center = weather
bottom-right = keyboard battery powermenu

systray-top = right
systray-bottom = none

# global style
line-size = 4

# when the current battery capacity excess this value,
# the full-capacity format will be displayed.
battery-full-at = 95

# battery and adapter
battery-bat = BAT0
battery-adp = AC

thermal-zone = 0
# Base temperature for where to start the ramp (in degrees celsius)
base-temperature = 20
# Threshold temperature to display warning label (in degrees celsius)
warn-temperature = 60

interface = enp0s31f6
